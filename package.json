{
  "name": "splashify",
  "scripts": {
    "dev": "cross-env NODE_ENV=development webpack-dev-server --inline --hot",
    "dev-start": "cross-env NODE_ENV=development ./app/node_modules/.bin/electron ./app",
    "build": "cross-env NODE_ENV=production webpack --progress --hide-modules",
    "start": "cross-env NODE_ENV=production ./app/node_modules/.bin/electron ./app",
    "release": "npm run build && build --mac --win"
  },
  "devDependencies": {
    "7zip-bin-mac": "^1.0.1",
    "babel-core": "^6.0.0",
    "babel-loader": "^6.0.0",
    "babel-preset-es2015": "^6.0.0",
    "cross-env": "^3.0.0",
    "css-loader": "^0.25.0",
    "electron": "^1.4.1",
    "electron-builder": "^10.9.2",
    "file-loader": "^0.9.0",
    "vue-loader": "^10.0.2",
    "vue-template-compiler": "^2.1.3",
    "webpack": "^2.1.0-beta.25",
    "webpack-dev-server": "^2.1.0-beta.0"
  },
  "build": {
    "appId": "com.dev7studios.splashify"
  },
  "postinstall": "install-app-deps"
}
